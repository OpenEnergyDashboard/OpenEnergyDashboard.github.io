{% assign currentVersion = site.helpCurrent | replace: "help", "" %}
{% if OEDVersion != currentVersion %}
    {% assign link = site.url | append: site.baseurl | append: "/" | append: site.helpCurrent | append: "/" | append: page.name | replace: ".html", "/" %}
